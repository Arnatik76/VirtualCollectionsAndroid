<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/catalogFragment">

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.androidvirtualcollections.fragment.CatalogFragment"
        android:label="Каталог"
        tools:layout="@layout/fragment_catalog">
        <action
            android:id="@+id/action_catalogFragment_to_collectionDetailFragment"
            app:destination="@id/collectionDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/collectionListFragment"
        android:name="com.example.androidvirtualcollections.fragment.CollectionListFragment"
        android:label="Мои коллекции"
        tools:layout="@layout/fragment_collection_list">
        <action
            android:id="@+id/action_collectionListFragment_to_collectionDetailFragment"
            app:destination="@id/collectionDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/collectionDetailFragment"
        android:name="com.example.androidvirtualcollections.fragment.CollectionDetailFragment"
        android:label="Детали коллекции"
        tools:layout="@layout/fragment_collection_detail">
        <argument
            android:name="collection"
            app:argType="com.example.androidvirtualcollections.model.Collection" />
    </fragment>
</navigation>